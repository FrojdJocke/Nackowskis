@model List<Nackowskis.Models.ApplicationUser>
<style>
    table.center {
        margin-left: auto;
        margin-right: auto;
        text-align: center;
    }

    th { text-align: center; }
</style>

<div class="container-fluid">
    <div class="row">
        <div id="upgradeHeader">
            <h1>Upgrade Users</h1>
        </div>
    </div>
    <br/>
    <div class="row">
        @if (!string.IsNullOrWhiteSpace((string) TempData["Upgrade"]))
        {
            <span class="text-danger">@TempData["Upgrade"].ToString()</span>
        }
    </div>
    <br/>
    <br/>
    <div id="regularUsersTble" class="row" align="center" style="max-height: 282px; max-width: 450px; overflow-y: auto; background-color: white;">
        <table class="table table-striped table-hover center">
            <thead class="thead-dark">
            <tr>

                <th>
                    Username
                </th>
                <th>
                    Upgrade to Admin
                </th>
            </tr>
            </thead>
            <tbody>
            @if (Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @user.NormalizedUserName
                        </td>

                        <td>
                            <a asp-controller="Admin" asp-action="UpgradeToAdmin" asp-route-userName="@user.UserName" class="btn btn-success">
                                <span class="glyphicon glyphicon-user"></span> Upgrade
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>N/A</td>
                    <td>All is Admin. Awesome!!</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>