@using System.Globalization
@model Nackowskis.ViewModels.AuctionViewModel

<table class="table table-striped table-hover">
    <thead class="thead-dark">
    <tr>
        <th scope="col">
            ID
        </th>
        <th scope="col">
            Titel
        </th>
        <th scope="col">
            End Date
        </th>
        <th scope="col">
            Estimate
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Auctions)
    {
        <tr>

            <td>@item.AuktionID</td>
            <td>
                <a asp-controller="Auction" asp-action="GetAuctionDetails" asp-route-auctionId="@item.AuktionID"
                   data-ajax="true"
                   data-ajax-method="get"
                   data-ajax-mode="replace"
                   data-ajax-update="#auctionDetailsModal"
                   data-toggle="modal" data-target="#auctionDetailsModal">@item.Titel</a>
            </td>
            <td>@item.SlutDatum.ToString("M", CultureInfo.GetCultureInfo("en-GB").DateTimeFormat)&nbsp;@item.SlutDatum.ToString("t")</td>
            <td>@(item.Utropspris):-</td>

        </tr>
    }
    </tbody>
</table>