@model Nackowskis.ViewModels.UserModel
@{
    ViewData["Title"] = "Register";
}

<form class="form-horizontal" asp-controller="User" asp-action="RegisterUser" method="post">
    <div class="form-group">
        <label class="control-label col-sm-3">Name</label>
        <div class="col-sm-7">
            <input class="form-control" asp-for="UserName" type="text" placeholder="Enter name" />
            <span class="text-danger" asp-validation-for="UserName"></span><br />

        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-3" asp-for="Password"></label>
        <div class="col-sm-7">
            <input class="form-control" asp-for="Password" type="password" placeholder="Enter password" />
            <span class="text-danger" asp-validation-for="Password"></span><br />
        </div>
    </div>
    @if (Model != null && Model.Unique == false)
    {
        <label class="text-danger">Användarnamnet finns redan</label><br />
    }
    <div class="form-group">
        <label class="control-label col-sm-3"></label>
        <div class="col-sm-7">
            <input type="submit" class="btn btn-default" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3"></label>
        <div class="col-sm-7">
            
            <a>
               <img src="~/Images/Googlelogo.png" style="width: 60px; height: auto;"/>
            </a>
        </div>
    </div>
</form>


